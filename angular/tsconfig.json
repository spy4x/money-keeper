{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "../*"
      ],
      "@client/*": [
        "apps/client/src/app/*"
      ],
      "@libs/*": [
        "libs/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
